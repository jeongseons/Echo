<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.JoinActivity">

    <EditText
        android:id="@+id/etJoinUserNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="닉네임"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgJoinUserProfile" />

    <EditText
        android:id="@+id/etJoinUserBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="date"
        android:text="20230111"
        app:layout_constraintEnd_toEndOf="@+id/etJoinUserNick"
        app:layout_constraintStart_toStartOf="@+id/etJoinUserNick"
        app:layout_constraintTop_toBottomOf="@+id/etJoinUserNick" />

    <Button
        android:id="@+id/btnUserJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="@+id/etJoinUserBirth"
        app:layout_constraintStart_toStartOf="@+id/etJoinUserBirth"
        app:layout_constraintTop_toBottomOf="@+id/rdoUserGender" />

    <RadioGroup
        android:id="@+id/rdoUserGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/etJoinUserBirth"
        app:layout_constraintTop_toBottomOf="@+id/dpSpinner">

        <RadioButton
            android:id="@+id/rdoJoinFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성" />

        <RadioButton
            android:id="@+id/rdoJoinMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남성" />

    </RadioGroup>

    <ImageView
        android:id="@+id/imgJoinUserProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/p1" />

    <DatePicker
        android:id="@+id/dpSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etJoinUserBirth" />

</androidx.constraintlayout.widget.ConstraintLayout>