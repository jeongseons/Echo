<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".group.detail.DetailTalkFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/ivTalkchat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:src="@android:drawable/sym_action_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvtalk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTalkchat3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="다쳤어요!"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTalkchat2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기다려주세요!"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/btnTalkchat3"
        app:layout_constraintEnd_toEndOf="@+id/btnTalkchat3"
        app:layout_constraintStart_toStartOf="@+id/btnTalkchat3" />

    <Button
        android:id="@+id/btnTalkchat1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="확인했습니다!"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/btnTalkchat2"
        app:layout_constraintEnd_toEndOf="@+id/btnTalkchat2"
        app:layout_constraintStart_toStartOf="@+id/btnTalkchat2" />

</androidx.constraintlayout.widget.ConstraintLayout>