<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="false"
    tools:context=".group.detail.DetailTalkFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvtalk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgChatBox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_chat_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnTalkchat1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="확인했습니다!"
            android:textAlignment="gravity"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btnTalkchat2"
            app:layout_constraintEnd_toEndOf="@+id/btnTalkchat2"
            app:layout_constraintStart_toStartOf="@+id/btnTalkchat2" />

        <Button
            android:id="@+id/btnTalkchat2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="기다려주세요!"
            android:textAlignment="gravity"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btnTalkchat3"
            app:layout_constraintEnd_toEndOf="@+id/btnTalkchat3"
            app:layout_constraintStart_toStartOf="@+id/btnTalkchat3" />

        <Button
            android:id="@+id/btnTalkchat3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="다쳤어요!"
            android:textAlignment="gravity"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>