<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:elevation="10dp">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGroupDateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2023-01-13 02:32M"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGroupDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="상세 일정"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tvGroupDateDate"
        app:layout_constraintStart_toStartOf="@+id/tvGroupDateDate"
        app:layout_constraintTop_toBottomOf="@+id/tvGroupDateDate" />

    <TextView
        android:id="@+id/tvGroupDateDetail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/border"
        android:elevation="10dp"
        android:padding="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvGroupDateText"
        app:layout_constraintStart_toStartOf="@+id/tvGroupDateText"
        app:layout_constraintTop_toBottomOf="@+id/tvGroupDateText" />

    <TextView
        android:id="@+id/tvGroupDateEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="수정"
        android:textColor="#008116"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvGroupDateText"
        app:layout_constraintEnd_toStartOf="@+id/tvGroupDateDel"
        app:layout_constraintTop_toTopOf="@+id/tvGroupDateText" />

    <TextView
        android:id="@+id/tvGroupDateDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="삭제"
        android:textColor="#C10000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvGroupDateEdit"
        app:layout_constraintEnd_toEndOf="@+id/tvGroupDateDetail"
        app:layout_constraintTop_toTopOf="@+id/tvGroupDateEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>