<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myPage.MyPageFragment">

    <View
        android:id="@+id/view20"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/mainColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMyPageLogout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="로그아웃"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvMyPageSetting"
        app:layout_constraintStart_toStartOf="@+id/tvMyPageSetting"
        app:layout_constraintTop_toBottomOf="@+id/tvMyPageSetting" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgMyPagePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/view20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view20"
        app:srcCompat="@drawable/profile" />

    <View
        android:id="@+id/View"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_boxcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMyPagePic" />

    <TextView
        android:id="@+id/tvMyPageNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="닉네임"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgMyPagePic"
        app:layout_constraintEnd_toEndOf="@+id/imgMyPagePic"
        app:layout_constraintStart_toStartOf="@+id/imgMyPagePic" />

    <TextView
        android:id="@+id/tvMyPageBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022년 02월 01일"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvMyPageNick"
        app:layout_constraintEnd_toEndOf="@+id/tvMyPageNick"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="@+id/tvMyPageNick" />

    <TextView
        android:id="@+id/tvMyPageModify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="프로필 수정 >"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="작성한글 >"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChannel"
        app:layout_constraintStart_toEndOf="@+id/tvMyPageCourseCnt"
        app:layout_constraintTop_toTopOf="@+id/tvChannel" />

    <TextView
        android:id="@+id/tvMyPageBoardCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="0"
        android:textColor="@color/lightColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvLetter"
        app:layout_constraintStart_toEndOf="@+id/tvLetter"
        app:layout_constraintTop_toTopOf="@+id/tvLetter" />

    <TextView
        android:id="@+id/tvChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="나의 경로 >"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/View"
        app:layout_constraintStart_toStartOf="@+id/View"
        app:layout_constraintTop_toTopOf="@+id/View"
        app:layout_constraintVertical_bias="0.523" />

    <TextView
        android:id="@+id/tvMyPageCourseCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="0"
        android:textColor="@color/lightColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChannel"
        app:layout_constraintStart_toEndOf="@+id/tvChannel"
        app:layout_constraintTop_toTopOf="@+id/tvChannel" />

    <TextView
        android:id="@+id/tvMyPageCourseStrg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="나의 경로 보관함"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/View" />

    <TextView
        android:id="@+id/tvMyPageBoardStrg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="작성한 글 보관함"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvMyPageCourseStrg"
        app:layout_constraintStart_toStartOf="@+id/tvMyPageCourseStrg"
        app:layout_constraintTop_toBottomOf="@+id/tvMyPageCourseStrg" />

    <TextView
        android:id="@+id/tvMyPageSetting"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="환경설정"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvMyPageBoardStrg"
        app:layout_constraintStart_toStartOf="@+id/tvMyPageBoardStrg"
        app:layout_constraintTop_toBottomOf="@+id/tvMyPageBoardStrg" />

    <TextView
        android:id="@+id/tvDeleteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:textColor="#EC2E2E"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMyPageLogout" />


</androidx.constraintlayout.widget.ConstraintLayout>

